@model TransportBrunaWeb.Models.DrivingCosts

@{
    ViewBag.Title = "Podrobnosti";
}

<h2>Podrobnosti stroška vožnje</h2>

<div>
    <hr />

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col" colspan="2">Podrobnosti</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.Costs.Date)</th>
                <td>@Html.DisplayFor(model => model.Costs.Date)</td>
            </tr>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.Costs.CostTypes.Name)</th>
                <td>@Html.DisplayFor(model => model.Costs.CostTypes.Name)</td>
            </tr>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.Costs.Amount)</th>
                <td>@Html.DisplayFor(model => model.Costs.Amount)</td>
            </tr>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.Costs.Note)</th>
                <td>@Html.DisplayFor(model => model.Costs.Note)</td>
            </tr>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.TransportationLog.Location)</th>
                <td>@Html.DisplayFor(model => model.TransportationLog.Location)</td>
            </tr>
            <tr>
                <th scope="col">Znamka vozila</th>
                <td>@Html.DisplayFor(model => model.TransportationLog.Vehicles.Brand)</td>
            </tr>
            <tr>
                <th scope="col">Registrska tablica</th>
                <td>@Html.DisplayFor(model => model.TransportationLog.Vehicles.RegPlate)</td>
            </tr>

        @if (Context.User.Identity.IsAuthenticated && User.IsInRole("Superadmin"))
        {
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Description)
                </th>

                <td>
                    @Html.DisplayFor(model => model.Description)
                </td>
            </tr>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.DateCreated)
                </th>

                <td>
                    @Html.DisplayFor(model => model.DateCreated)
                </td>
            </tr>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.DateModified)
                </th>

                <td>
                    @Html.DisplayFor(model => model.DateModified)
                </td>
            </tr>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </th>

                <td>
                    @Html.DisplayFor(model => model.CreatedBy)
                </td>
            </tr>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.ModifiedBy)
                </th>

                <td>
                    @Html.DisplayFor(model => model.ModifiedBy)
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<p>
    @Html.ActionLink("Nazaj na seznam", "Index")
</p>
