@model TransportBrunaWeb.Models.Customers

@{
    ViewBag.Title = "Podrobnosti";
}

<h2>Podrobnosti stranke</h2>
<ul class="nav nav-pills">
    <li>@Html.ActionLink("Uredi stranko", "Edit", new { id = Model.CustomerID })</li>
</ul>

<hr class="hrrr" />

<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col" colspan="2">Podrobnosti</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.CompanyID != null)
            {
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.Company.FullName)</th>
                    <td>@Html.DisplayFor(model => model.Company.FullName)</td>
                </tr>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.Company.Address)</th>
                    <td>@Html.DisplayFor(model => model.Company.Address)</td>
                </tr>
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Company.Phone)
                    </th>
                    <td>@Html.DisplayFor(model => model.Company.Phone)</td>
                </tr>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.Company.Email)</th>
                    <td>@Html.DisplayFor(model => model.Company.Email)</td>
                </tr>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.Company.Vat)</th>
                    <td>@Html.DisplayFor(model => model.Company.Vat)</td>
                </tr>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.Company.Note)</th>
                    <td>@Html.DisplayFor(model => model.Company.Note)</td>
                </tr>
            }
            else
            {
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.PrivateCustomer.FullName)</th>
                    <td>@Html.DisplayFor(model => model.PrivateCustomer.FullName)</td>
                </tr>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.PrivateCustomer.Address)</th>
                    <td>@Html.DisplayFor(model => model.PrivateCustomer.Address)</td>
                </tr>
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.PrivateCustomer.Phone)
                    </th>
                    <td>@Html.DisplayFor(model => model.PrivateCustomer.Phone)</td>
                </tr>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.PrivateCustomer.Email)</th>
                    <td>@Html.DisplayFor(model => model.PrivateCustomer.Email)</td>
                </tr>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.PrivateCustomer.Vat)</th>
                    <td>@Html.DisplayFor(model => model.PrivateCustomer.Vat)</td>
                </tr>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.PrivateCustomer.Note)</th>
                    <td>@Html.DisplayFor(model => model.PrivateCustomer.Note)</td>
                </tr>
            }
            @if (Context.User.Identity.IsAuthenticated && User.IsInRole("Superadmin"))
            {
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Description)
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.Description)
                    </td>
                </tr>
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.DateCreated)
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.DateCreated)
                    </td>
                </tr>
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.DateModified)
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.DateModified)
                    </td>
                </tr>
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.CreatedBy)
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.CreatedBy)
                    </td>
                </tr>
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ModifiedBy)
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.ModifiedBy)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<p>
    @Html.ActionLink("Nazaj na seznam", "Index")
</p>
