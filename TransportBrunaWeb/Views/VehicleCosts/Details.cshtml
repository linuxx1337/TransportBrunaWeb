@model TransportBrunaWeb.Models.VehicleCosts

@{
    ViewBag.Title = "Podrobnosti";
}

<h2>Podrobnosti stroška vozila</h2>
<ul class="nav nav-pills">
    <li><a href="@Url.Action("Edit", "Costs", new { id=Model.CostID })">Uredi strošek</a></li>
</ul>
<hr class="hrrr" />
<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col" colspan="2">Podrobnosti</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.Costs.Date)</th>
                <td>@Html.DisplayFor(model => model.Costs.Date)</td>
            </tr>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.Costs.CostTypes.Name)</th>
                <td>@Html.DisplayFor(model => model.Costs.CostTypes.Name)</td>
            </tr>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.Costs.Amount)</th>
                <td>@Html.DisplayFor(model => model.Costs.Amount)</td>
            </tr>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.Costs.Note)</th>
                <td>@Html.DisplayFor(model => model.Costs.Note)</td>
            </tr>
            <tr>
                <th scope="col">Znamka vozila</th>
                <td>@Html.DisplayFor(model => model.Vehicles.Brand)</td>
            </tr>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.Vehicles.RegPlate)</th>
                <td>@Html.DisplayFor(model => model.Vehicles.RegPlate)</td>
            </tr>

            @if (Context.User.Identity.IsAuthenticated && User.IsInRole("Superadmin"))
            {
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Description)
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.Description)
                    </td>
                </tr>
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.DateCreated)
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.DateCreated)
                    </td>
                </tr>
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.DateModified)
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.DateModified)
                    </td>
                </tr>
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.CreatedBy)
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.CreatedBy)
                    </td>
                </tr>
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ModifiedBy)
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.ModifiedBy)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<p>
    @Html.ActionLink("Nazaj na seznam", "Index")
</p>
